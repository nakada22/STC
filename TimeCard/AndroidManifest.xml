<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.timecard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="11" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation"
            android:name=".TopActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailyActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MonthlyActivity"
            android:label="@string/title_monthly" >
        </activity>
        <activity
            android:name=".BaseSetListActivity"
            android:label="@string/title_baseini" >
        </activity>
		<activity
            android:name=".PassWordSetListActivity"
            android:label="@string/password_ini" >
        </activity>
    </application>

</manifest>